import speech_recognition as sr
import pyttsx3
import pyautogui
import pyaudio
import webbrowser
import wolframalpha
import wikipedia
from pyicloud import PyiCloudService
from numpy import random
import time
import sys
import imdb
from googletrans import Translator
import pygame
from datetime import datetime





engine = pyttsx3.init()
ia = imdb.IMDb()  
api = PyiCloudService('parthparekh384@gmail.com', 'Thesummeroffitness2018')
#ArduinoSerial = serial.Serial('com3', 9600)
'''
#now = datetime.now()
#time = now.strftime('%Y %m %d %I:%M:%S')

